{
  // "files": ["src/index.ts"],
  "compilerOptions": {
    "lib": ["es2017", "DOM"],
    "target": "ES2017",
    "allowJs": false,
    "module": "ES2015",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": false,
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "baseUrl": "src",
    // "rootDir": ".",
    "resolveJsonModule": true,
    // "typeRoots": ["node_modules/@types", "global.d.ts"],
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
